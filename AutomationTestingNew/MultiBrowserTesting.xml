<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="MultiBrowserTesting" parallel="tests">
  <test name="ChromeBrowserTest">
  <parameter name="browser" value="chrome"></parameter>
    <classes>
      <class name="testscript.LoginTest">	
      <methods>
      <include name="verifyUserIsAbleToLoginWithValidCredentials "/>
      <include name="verifyUserIsAbleToLoginWithInvalidCredentials"/>
      </methods>
      </class>	
    </classes>
  </test> <!-- Test -->
  
  <test name="FireFoxBrowserTest">
  <parameter name="browser" value="firefox"></parameter>
    <classes>
      <class name="testscript.LoginTest">
      	<methods>
      <include name="verifyUserIsAbleToLoginWithValidCredentials"/>
      <include name="verifyUserIsAbleToLoginWithInvalidCredentials"/>
      </methods>
      </class>	
    </classes>
  </test> <!-- Test -->
</suite> <!-- Suite -->
